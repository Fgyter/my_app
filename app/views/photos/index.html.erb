<div class="jumbotron">



<h1>Фото</h1>

<table>
  <thead>
    <tr>
      <th>описание</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @photos.each do |photo| %>
      <tr>
        <td><%= photo.description %></td>
        <td><%= link_to 'Показать', photo %></td>
        <td><%= link_to 'Изменить', edit_photo_path(photo) %></td>
        <td><%= link_to 'Удалить', photo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Новое фото', new_photo_path, class:"btn btn-primary" %>

</div>
